@model JaddooTravel.Dtos.CategoryDtos.GetCategoryByIdDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Kategori Güncelle</h5>

                </div>

                <form method="post">
                    <input type="hidden" asp-for="CategoryId" />
                    <input type="text" asp-for="CategoryName" placeholder="Kategori Adını Giriniz" class="form-control" />
                    <br />
                    <input type="text" asp-for="Description" placeholder="Açıklamasını Giriniz" class="form-control" />
                    <br />
                    <input type="text" asp-for="IconUrl" placeholder="Ikon Url Giriniz" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Kategori Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>