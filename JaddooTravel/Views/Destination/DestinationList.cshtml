@model List<JaddooTravel.Dtos.DestinationDtos.ResultDestinationDto>
@{
    ViewData["Title"] = "DestinationList";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Rotalar</h5>
                </div>
                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir/Ülke Adı</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Kapasite</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.DestinationId</th>
                                <td>@item.CityCountry</td>
                                <td>@item.Price</td>
                                <td>@item.Capacity</td>
                                <td><a href="/Destination/DeleteDestination/@item.DestinationId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Destination/UpdateDestination/@item.DestinationId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<a href="/Destination/CreateDestination" class="btn btn-info">Yeni Tur Girişi</a>