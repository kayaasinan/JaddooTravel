@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Öne Çıkanlar</h5>
                </div>
                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Ana Başlık</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Video Url</th>
                                <th scope ="col">Sil</th>
                                <th scope ="col" >Güncelle</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MainTitle</td>
                                <td>@item.Title</td>
                                <td>@item.Description.Substring(0,30)...</td>
                                <td>@item.VideoUrl.Substring(0,20)...</td>
                                <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="mb-4">
    <a href="/Feature/CreateFeature" class="btn btn-info">Yeni Öne Çıkan Girişi</a>
</div>

<div>
    @await Component.InvokeAsync("_SnapshotPopularDestination")
</div>
