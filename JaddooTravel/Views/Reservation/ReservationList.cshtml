@model List<ResultReservationDto>
@{
    ViewData["Title"] = "ReservationList";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Rezervasyonlar</h5>
                </div>
                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad Soyad</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Şehir/Ülke</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.ReservationId</th>
                                <td>@item.FullName</td>
                                <td>@item.Phone</td>
                                <td>@item.Destination?.CityCountry</td>
                                <td><a href="/Category/DeleteCategory/@item.ReservationId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Category/UpdateCategory/@item.ReservationId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


