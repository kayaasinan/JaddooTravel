@model JaddooTravel.Dtos.ReservationDtos.CreateReservationDto

@*
    Default Booking Steps Component
*@

<section id="booking" class="py-5 bg-light">

    <div class="container">
        <div class="row align-items-center g-4">
            @await Component.InvokeAsync("_DefaultTripPlanComponent")

            <div class="col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">
                        <h3 class="text-center mb-4 text-primary fw-bold">✈️ Rezervasyon Formu</h3>

                        <form method="post" asp-action="CreateReservation" asp-controller="Reservation">
                            <div class="mb-3 input-group">
                                <span class="input-group-text bg-info text-white">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <input asp-for="FullName" class="form-control" placeholder="Adınız Soyadınız" required />
                            </div>

                            <div class="mb-3 input-group">
                                <span class="input-group-text bg-info text-white">
                                    <i class="bi bi-telephone-fill"></i>
                                </span>
                                <input asp-for="Phone" class="form-control" placeholder="Telefon Numaranız" required />
                            </div>

                            <div class="mb-3 input-group">
                                <span class="input-group-text bg-info text-white">
                                    <i class="bi bi-envelope-fill"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="Email Adresiniz" required />
                            </div>

                            <div class="mb-3 input-group">
                                <span class="input-group-text bg-info text-white">
                                    <i class="bi bi-geo-alt-fill"></i>
                                </span>
                                <select asp-for="DestinationId" class="form-select" required>
                                    <option value="">Rota Seçin</option>
                                    @foreach (var item in Model.DestinationList)
                                    {
                                        <option value="@item.DestinationId">
                                            @item.CityCountry - @item.DayNight gece - @item.Price ₺
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <textarea asp-for="Notes" rows="3" class="form-control" placeholder="Varsa eklemek istedikleriniz"></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-info btn-lg fw-bold shadow-sm">
                                    🚀 Rezervasyon Oluştur
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
