@model List<ResultReservationDto>
@*
    Snapshot Reservation
*@
<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Son Rezervasyon Talepleri</h5>
                </div>

                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 25%">Rezervasyon No</th>
                                <th scope="col" style="width: 25%">Ad Soyad</th>
                                <th scope="col" style="width: 20%">Telefon</th>
                                <th scope="col" style="width: 30%">Şehir/Ülke</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="me-4">
                                                <h6 class="mb-1 fw-bolder">@item.ReservationId.Substring(0,10)...</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0">@item.FullName</p>
                                    </td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0 text-success">
                                            @item.Phone
                                        </p>
                                    </td>
                                    <td>
                                        <span class="badge bg-light-success rounded-pill text-success px-3 py-2 fs-3">@item.Email</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>