@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Referanslar</h5>

                </div>
                <form method="post">
                    <input type="text" asp-for="ProfileImageUrl" placeholder="Profil Url Giriniz" class="form-control" />
                    <br />
                    <input type="text" asp-for="FullName" placeholder="Ad Soyad Giriniz" class="form-control" />
                    <br />
                    <input type="text" asp-for="Title" placeholder="Ünvan Giriniz" class="form-control" />
                    <br />
                    <input type="text" asp-for="Notes" placeholder="Açıklamasını Giriniz" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Referans Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

