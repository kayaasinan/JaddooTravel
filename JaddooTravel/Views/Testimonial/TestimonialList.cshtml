@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Referanslar</h5>
                </div>
                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Profil Resmi</th>
                                <th scope="col">Ad Soyad</th>
                                <th scope="col">Ünvan</th>
                                <th scope="col">Açıklama</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ProfileImageUrl" class="rounded-circle" width="45" height="45" alt="profil" />
                                </td>
                                <td>@item.FullName</td>
                                <td>@item.Title</td>
                                <td>@item.Notes.Substring(0,40)...</td>
                                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("_SnapshotPopularDestination")
